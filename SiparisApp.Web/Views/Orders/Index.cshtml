@using SiparisApp.Core.DTOs;
@model List<OrderListDTOs>

<h1>Sipariş Listesi</h1>

<button class="btn btn-outline-success" id="btn" data-bs-toggle="modal" data-bs-target="#partialModal" onclick="UpdateModal()" style="float: right">Düzenle</button>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <th>Müşteri Sipariş No</th>
        <th>Çıkış Adresi</th>
        <th>Varış Adresi</th>
        <th>Miktar</th>
        <th>Miktar Birim</th>
        <th>Ağırlık</th>
        <th>Ağırlık Birim</th>
        <th>Malzeme Kodu</th>
        <th>Not</th>
        <th>Statü</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 20px; text-align: center;"> <input type="radio" name="size" value="@item.Id"> </td>
            <td>@item.ord_musteri_no</td>
            <td>@item.ord_cikis_adres</td>
            <td>@item.ord_varis_adres</td>
            <td>@item.ord_miktar</td>
            <td>@item.ord_miktar_birim</td>
            <td>@item.ord_agirlik</td>
            <td>@item.ord_agirlik_birim</td>
            <td>@item.ord_malzeme_kodu</td>
            <td>@item.ord_not</td>
            <td>@item.ord_durum</td>
            @*<td><a href="/Admin/Destination/UpdateDestination/@item.Id" class="btn btn-outline-success">Güncelle</a></td>*@
        </tr>

    }
</table>

<div class="modal" id="partialModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sipariş Düzenleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
               
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    @section Scripts
        {
        <script>
            function UpdateModal() {

            orderstatuscontrol();
        }

        function orderstatuscontrol() {
            var radiolar = document.getElementsByName("size");
            var gecerlimi = false;
            var i = 0;
            while (!gecerlimi && i < radiolar.length) {
                if (radiolar[i].checked) gecerlimi = true;
                i++;
            }
            if (!gecerlimi) {
                alert("Sipariş Seçimi yapılmadı.");

            }
            else {

                var seciliId = document.querySelector('input[name="size"]:checked').value;
                $.ajax({
                    type: "GET",
                    url: "/Orders/OrderStatusUpdate",
                    data: { "id": seciliId },
                    success: function (response) {
                        $("#partialModal").find(".modal-body").html(response);
                        $("#partialModal").modal('show');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
        }
    </script>
}
